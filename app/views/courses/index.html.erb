<p id="notice"><%= notice %></p>

<br>

<div class="col-lg-12">
  <div class="main-box clearfix">
    <header class="main-box-header clearfix">
      <h2 class="pull-left"><%= t(:listing_courses, scope: [:panel, :text]) %></h2>
      
      <div class="filter-block pull-right">

        <%= link_to t(:new_course, scope: [:panel, :buttons]), new_course_path, class: "btn btn-primary pull-right" %>
      </div>
    </header>
    
    <div class="main-box-body clearfix">
      <div class="table-responsive">
        <table class="table">
        <thead>
          <tr>
            <th><%= t(:name, scope: [:panel, :labels]) %></th>
            <th><%= t(:description, scope: [:panel, :labels]) %></th>
            <th>Status</th>
            <th colspan="3"></th>
          </tr>
        </thead>
          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= course.name %></td>
                <td><%= course.description %></td>
                <td><%= course.status ? t(:active, scope: [:panel, :text]) : t(:inactive, scope: [:panel, :text]) %></td>
                <td><%= link_to t(:show, scope: [:panel, :buttons]), course %></td>
                <td><%= link_to t(:edit, scope: [:panel, :buttons]), edit_course_path(course) %></td>
                <td><%= link_to t(:destroy, scope: [:panel, :buttons]), course, method: :delete, data: { confirm: t(:sure, scope: [:panel, :confirmation_messages]) } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>