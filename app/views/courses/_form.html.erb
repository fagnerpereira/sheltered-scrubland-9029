<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, I18n.t(:error, scope: [:panel, :error_messages])) %></h2>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
    <%= f.label :status %><br>
    <%= f.check_box :status %>
  </div>
  <div class="form-group">
    <%= f.submit t(:submit, scope: [:panel, :buttons]) %>
  </div>
<% end %>
