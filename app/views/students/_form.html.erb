<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, t(:error, scope: [:panel, :error_messages])) %></h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :register_number %><br>
    <%= f.text_field :register_number %>
  </div>
  <div class="form-group">
    <%= collection_select(:classroom, :course_id, Course.all, :id, :name) %>
  </div>
  <div class="form-group">
    <%= f.label :status %><br>
    <%= f.check_box :status %>
  </div>
  <div class="form-group">
    <%= f.submit t(:submit, scope: [:panel, :buttons]) %>
  </div>
<% end %>
